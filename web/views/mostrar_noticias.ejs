<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <!-- CSS personalizada -->
    <link rel="stylesheet" href="css/main.css" type="text/css">

    <title>Notícias</title>
</head>
<body>
    <div class="container">
        <input class="margin-top" type="button" value="Voltar" onclick="window.close()">
        <h1>Notícias</h1>
        <table class="table table-striped table-bordered">
            <tr>
                <th>Titulo:</th>
                <th>Texto:</th>
                <th>Imagem:</th>
                <th>Preview:</th>
                <th>Data:</th>
                <th colspan="2"><a href="/criar_noticias">Inserir</a></th>
            </tr>
            <% for(var n = 0; n < noticias.length; n++) { %>
            <tr>
                <td><%=noticias[n].titulo%></td>
                <td><%=noticias[n].texto%></td>
                <td><%=noticias[n].imagem%></td>
                <td><img src="images/<%=noticias[n].imagem%>" width="100"></td>
                <td><%=noticias[n].data%></td>
                <td><a href="/alterar_noticia?id=<%=noticias[n].id%>">Alterar</a></td>
                <td><a href="/excluir_noticia?id=<%=noticias[n].id%>">Excluir</a></td>
            </tr>
            <% } %>
        </table>
    </div>
</body>
</html>